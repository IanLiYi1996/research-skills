{
  "name": "research-skills",
  "owner": {
    "name": "Ian Lee",
    "email": "ianleely@amazon.com"
  },
  "metadata": {
    "description": "Comprehensive research and analysis toolkit for academic workflows",
    "version": "1.0.0"
  },
  "plugins": [
    {
      "name": "research-toolkit",
      "description": "Comprehensive research automation with academic tools, data analysis, and workflow management. Supports literature review, data visualization, paper writing, and experiment tracking.",
      "version": "1.0.0",
      "author": {
        "name": "Ian Lee",
        "email": "ianleely@amazon.com"
      },
      "homepage": "https://github.com/IanLiYi1996/research-skills",
      "repository": "https://github.com/IanLiYi1996/research-skills",
      "license": "MIT",
      "keywords": [
        "research",
        "academic",
        "analysis",
        "data",
        "automation",
        "literature-review",
        "visualization",
        "experiments"
      ],
      "category": "productivity",
      "source": "./",
      "strict": false,
      "skills": [
        "./skills/academic-research",
        "./skills/data-visualization",
        "./skills/academic-writing",
        "./skills/experiment-tracking",
        "./skills/arxiv-search",
        "./skills/latex-writing",
        "./skills/huggingface",
        "./skills/web-fetch",
        "./skills/git-research",
        "./skills/context7-docs",
        "./skills/slidev-presentation",
        "./skills/pptx-generation"
      ],
      "mcpServers": {
        "fs": {
          "type": "stdio",
          "command": "npx",
          "args": [
            "-y",
            "@modelcontextprotocol/server-filesystem",
            "${RESEARCH_FS_PATH:-.}"
          ]
        },
        "search": {
          "type": "stdio",
          "command": "npx",
          "args": [
            "-y",
            "tavily-mcp@0.1.4"
          ],
          "env": {
            "TAVILY_API_KEY": "${TAVILY_API_KEY}"
          }
        },
        "arxiv": {
          "type": "stdio",
          "command": "uv",
          "args": [
            "tool",
            "run",
            "arxiv-mcp-server",
            "--storage-path",
            "${ARXIV_STORAGE_PATH:-./arxiv_papers}"
          ]
        },
        "huggingface": {
          "type": "http",
          "url": "https://huggingface.co/mcp?login"
        },
        "fetch": {
          "type": "stdio",
          "command": "uvx",
          "args": [
            "mcp-server-fetch"
          ]
        },
        "git": {
          "type": "stdio",
          "command": "uvx",
          "args": [
            "mcp-server-git",
            "--repository",
            "${RESEARCH_GIT_PATH:-.}"
          ]
        },
        "context7": {
          "type": "stdio",
          "command": "npx",
          "args": [
            "-y",
            "@upstash/context7-mcp"
          ],
          "env": {
            "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
          }
        }
      }
    }
  ]
}
